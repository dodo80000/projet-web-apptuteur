{% extends 'base.html.twig' %}

{% block body %}

<h1 class="mb-4">Ajouter une visite pour {{ etudiant.prenom }} {{ etudiant.nom }}</h1>

<div class="card p-4 shadow-sm">
    <form method="POST">

        <div class="mb-3">
            <label class="form-label">Date :</label>
            <input type="date" name="date" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Commentaire :</label>
            <textarea name="commentaire" class="form-control" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn btn-success">
            Cr√©er la visite
        </button>

        <a href="{{ path('visites_etudiant', { id: etudiant.id }) }}" class="btn btn-secondary ms-2">
            Annuler
        </a>

    </form>
</div>

{% endblock %}
